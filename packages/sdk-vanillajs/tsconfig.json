{
    "extends": "@happychain/configs/tsconfig.vite-lib.json",
    "compilerOptions": {
        "rootDir": "../",
        "noEmit": false,
        "emitDeclarationOnly": true,
        "outDir": "dist",
        "declarationDir": "dist",
        "declarationMap": false,
        "declaration": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "moduleResolution": "bundler"
