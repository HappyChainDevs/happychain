{
    // Basic TSConfig for packages which do not need to be compiled directly (sdk-shared, common)
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Bun.sh",
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "lib": ["ESNext", "DOM"],
        "target": "ESNext",
        "jsx": "react-jsx",
        "allowJs": true,
        "skipLibCheck": true,
        "moduleDetection": "force"
    }
}
