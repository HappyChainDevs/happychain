{
    // This tsconfig is extended by tsconfigs that are used for type generation.
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Types",
    "compilerOptions": {
        "tsBuildInfoFile": "${configDir}/node_modules/.tmp/tsconfig.types.tsbuildinfo",
        "incremental": true,
        "noEmit": false,
        "emitDeclarationOnly": true,
        "declarationDir": "${configDir}/dist/types",
        "declaration": true
    }
}
