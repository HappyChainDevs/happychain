{
  "compilerOptions": {
		"lib": ["ESNext", "DOM"],
		"target": "ESNext",
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.typedoc.tsbuildinfo",
		"module": "ESNext",
		"moduleDetection": "force",
		"jsx": "react-jsx",
		"allowJs": true,
		"incremental": true,

		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,

		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,

		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noPropertyAccessFromIndexSignature": false
  },
  "include": ["../sdk-vanillajs/lib", "../sdk-react/lib", "../sdk-shared/lib"]
}
